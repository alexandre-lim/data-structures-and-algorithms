{
  "name": "typescript-data-structures-and-algorithms",
  "private": true,
  "version": "1.0.0",
  "description": "A companion to the book A Common-Sense Guide to Data Structures and Algorithms by Jay Wengrow written in Typescript",
  "author": "Alexandre Lim",
  "license": "ISC",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "start": "node build/index.js",
    "build": "tsc --project tsconfig.build.json",
    "watch": "tsc -w",
    "lint": "eslint -c ./.eslintrc.json \"src/**/*.ts\"",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-format lint test build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": ">=6",
    "jest": "^27.5.1",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|json|ts|tsx)": [
      "prettier --ignore-path .gitignore --write",
      "jest --findRelatedTests"
    ]
  }
}
